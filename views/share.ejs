<body>
    <%-include("includes/common")  %>
    <h1>Share your favorite technology</h1>
    <main>
        <form action="/forms" method="post">
            <ul id="data">
                <li><label for="name">Name</label>
                    <input type="text" id="name" name="name">
                </li>
                <li>
                    <label for="address">Best platform</label>
                    <input type="text" id="address" name="platform">
                </li>
                <li>
                    <label for="techs">Type of technology</label>
                    <input type="text" id="techs" name="tech_name">
                </li>
                <li>
                    <label for="website">Tech website</label>
                    <input type="text" id="website" name="tech_website">
                </li>
                <li>
                    <label for="Y">Why do you recommend it</label>
                    <textarea name="Why_recommended" id="Y" cols="30" rows="10"></textarea>
                </li>
                
                <button id="btn" type="submit">Submit</button>
            </ul>

        </form>
    </main>